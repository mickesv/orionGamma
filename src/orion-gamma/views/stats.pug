extends layout

block content
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js')
  script(src='/javascripts/Chart.min.js')  
  script.
    var AllProjects=!{JSON.stringify(Projects).replace(/<\//g, '<\\/')}
  script(src='/javascripts/projectChart.js')

  each project in Projects
    - var projectName='No defined name'
    each item in project
      if (item.eventType == 'projectName') 
        - projectName=item.SafeName
        h1= 'Project: ' + item.ProjectName
        div(id=projectName+'-Details')
        div(id=projectName+'-Tags')
        div(id=projectName+'-Forks')
        div(id=projectName+'-Commits')
        div(id=projectName+'-Issues')
        canvas(id=''+projectName+'-Graph', width=600, height=300)
